<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>

    <LinearLayout style="@style/bottom_main_menu_ll">

        <ImageView
            android:id="@+id/menu_iv_1"
            style="@style/bottom_main_menu_icon"
            android:src="@mipmap/menu_icon_map_black" />

        <ImageView
            android:id="@+id/menu_iv_2"
            style="@style/bottom_main_menu_icon"
            android:src="@mipmap/menu_icon_list_gray" />

        <ImageView
            android:id="@+id/menu_iv_3"
            style="@style/bottom_main_menu_icon"
            android:src="@mipmap/menu_icon_profile_gray" />

        <ImageView
            android:id="@+id/menu_iv_4"
            style="@style/bottom_main_menu_icon"
            android:src="@mipmap/menu_icon_profile_gray" />

        <ImageView
            android:id="@+id/menu_iv_5"
            style="@style/bottom_main_menu_icon"
            android:src="@mipmap/menu_icon_profile_gray" />
    </LinearLayout>

</LinearLayout>